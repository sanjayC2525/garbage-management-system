# Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5001

# Database
DATABASE_URL="file:./dev.db"

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars

# Demo Account Passwords (for development only)
# Set these to secure passwords for demo accounts
DEMO_ADMIN_PASSWORD=your-secure-admin-password
DEMO_WORKER_PASSWORD=your-secure-worker-password  
DEMO_CITIZEN_PASSWORD=your-secure-citizen-password

# Production CORS (comma-separated origins)
# Only used when NODE_ENV=production
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email (optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
